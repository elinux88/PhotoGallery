<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/gallery_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/photo_image"
            />

        <TextView
            android:id="@+id/gallery_item_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photo_owner"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            />

        <TextView
            android:id="@+id/gallery_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photo_title"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/gallery_item_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photo_url"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            />

    </LinearLayout>
</ScrollView>